@model LanchesMac.Models.Snack

@{
    ViewData["Title"] = "Edit";
}
<h3>Editar Produto</h3>
<hr />
<form asp-action="Edit" role="form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SmallDescription" class="control-label"></label>
        <textarea asp-for="SmallDescription" class="form-control"></textarea>
        <span asp-validation-for="SmallDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="ImgPath" class="control-label"></label>
            <input asp-for="ImgPath" class="form-control" />
            <span asp-validation-for="ImgPath" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <img src="@Model.ImgPath" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ImgThumbnailPath" class="control-label"></label>
        <input asp-for="ImgThumbnailPath" class="form-control" />
        <span asp-validation-for="ImgThumbnailPath" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="form-group col-sm-4">
            <label class="control-label">Marcar como Preferido?</label>
            <br />
            <label class="form-check-label" style="padding-left: 20px">
                <input class="form-check-input" asp-for="IsFavorite" /> @Html.DisplayNameFor(model => model.IsFavorite)
            </label>
        </div>
        <div class="form-group col-sm-4">
            <label class="control-label">Marcar como em Estoque?</label>
            <br />
            <label class="form-check-label" style="padding-left: 20px">
                <input class="form-check-input" asp-for="IsAvaible" /> @Html.DisplayNameFor(model => model.IsAvaible)
            </label>
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="CategoryId" class="control-label"></label>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
    </div>

    <hr />
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-outline-info">Retornar</a>
    </div>
</form>
