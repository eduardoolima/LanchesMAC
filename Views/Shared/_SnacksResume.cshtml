@model LanchesMac.Models.Snack

<div class="col-sm-4 col-md-4 col-lg-4">
    <p><img src="@Model.ImgPath" class="img-fluid" /></p>
    <p>Preço: @Model.Price.ToString("c")</p>
    <a asp-controller="Snack" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a>
    <p>@Model.SmallDescription</p>
    <div>
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="ShoppingCart" asp-action="AddItemToShoppingCart" 
            asp-route-id="@Model.Id">
            Incluir no Carrinho
            </a>
        </p>
    </div>
</div>