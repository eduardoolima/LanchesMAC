@model Snack
<div class="container">
    <div class="row">
        <div class="card">
            <div class="text-center">
                <img src="@Model.ImgPath" class="img-fluid" alt="...">
            </div>
            <div class="card-body">
                <h2 class="card-title">@Model.Name</h2>
                <p class="card-text">@Model.Description</p>
                <p class="btn btn-group aling-content-lg-end">
                    <a asp-controller="Snack" asp-action="Index" class="btn btn-outline-info">Ver todos os lanches</a>
                    <a class="btn btn-primary" id="cartButton" asp-controller="ShoppingCart" asp-action="AddItemToShoppingCart"
                    asp-route-id="@Model.Id">Adicionar ao carrinho</a>
                </p>
            </div>
        </div>
    </div>
</div>
